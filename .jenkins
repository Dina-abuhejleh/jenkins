pipeline {
    agent any
    environment {
        memory =sh(returnStdout: true, script: "free -m | awk 'NR==2{printf \"%.2f\",\$3*100/\$2}'")
        hostname =sh(returnStdout: true, script: "hostname")
    }
    stages {
          
        stage('Build') {
            steps {
                script {
                    if (Integer.parseInt(env.memory) > 80) { 
                        echo "Running ${env.memory}"
                    }
                }    
            }
        }     
    }
}
